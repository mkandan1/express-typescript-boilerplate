{
	"compilerOptions": {
		"target": "ES6",
		"module": "CommonJS",
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"esModuleInterop": true,
		"baseUrl": "./src",
		"paths": {
			"@app/*": ["app/*"],
			"@config/*": ["config/*"],
			"@db/*": ["db/*"],
			"@utils/*": ["utils/*"],
			"@middlewares/*": ["middlewares/*"],
			"@env/*": ["env/*"],
			"@interfaces/*": ["interfaces/*"]
		}
	},
	"exclude": [
   		"tests",
    	"jest.config.ts"
	]
}
